{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationDir": "dist/",
    "rootDirs": ["src/"]
  },

  "include": ["src"],
  "exclude": ["**/*.spec.ts", "**/*.d.ts", "node_modules"]
}
